<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="248dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="12dp"
    app:strokeColor="@color/primary"
    app:strokeWidth="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_pfp"
                >

                <TextView
                    android:id="@+id/tv_car_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/montserrat_semibold"
                    android:lineSpacingExtra="24dp"
                    android:text="S 500 Sedan"
                    android:textColor="@color/second_primary"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_car_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/montserrat_semibold"
                    android:lineSpacingExtra="14dp"
                    android:text="Mercedes-Benz"
                    android:textColor="@color/old_gray"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_book_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/montserrat_semibold"
                    android:lineSpacingExtra="14dp"
                    android:text="2500р в день"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/gearbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/to_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp"
                    >

                    <ImageView
                        android:id="@+id/iv_gearbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_gearbox"
                        android:contentDescription="bookings"
                        android:layout_gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tv_gearbox_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_regular"
                        android:lineSpacingExtra="24dp"
                        android:text="A/T"
                        android:textColor="@color/second_primary"
                        android:textSize="14sp"
                        android:layout_marginStart="6dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_gearbox"
                        />
                    <ImageView
                        android:id="@+id/iv_fuel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fuel"
                        android:contentDescription="bookings"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_gearbox_info"/>

                    <TextView
                        android:id="@+id/tv_fuel_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_regular"
                        android:lineSpacingExtra="24dp"
                        android:text="Бензин"
                        android:textColor="@color/second_primary"
                        android:textSize="14sp"
                        android:layout_marginStart="6dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_fuel"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>




            </LinearLayout>

            <ImageView
                android:id="@+id/carImage"
                android:layout_width="176dp"
                android:layout_height="136dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_car_img" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|end"
            android:weightSum="2"
            >

            <android.widget.Button
                android:id="@+id/btn_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#2A1246"
                android:background="@drawable/shape_button_footer"
                android:paddingStart="14dp"
                android:paddingTop="14dp"
                android:paddingEnd="14dp"
                android:paddingBottom="14dp"
                android:layout_weight="1"
                android:text="Забронировать"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="16sp"
                android:textAllCaps="false" />

            <android.widget.Button
                android:id="@+id/btn_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_button_blank_cornered"
                android:fontFamily="@font/montserrat_regular"
                android:paddingStart="14dp"
                android:paddingTop="14dp"
                android:paddingEnd="14dp"
                android:paddingBottom="14dp"
                android:layout_weight="1"
                android:layout_marginStart="14dp"
                android:text="Детали"
                android:textAllCaps="false"
                android:textColor="#344054"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>